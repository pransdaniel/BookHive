    private void btnHomeActionPerformed(java.awt.event.ActionEvent evt) {                                        
        PagesController.homePage.setMyBookService(myBookService);
        
        pnlPage.removeAll();
        pnlPage.add(PagesController.homePage);
        resetAllMenu();
        btnHome.setForeground(new Color(0, 0, 0));
        btnHome.setIcon(new javax.swing.ImageIcon(getClass().getResource("/assets/home_on.png")));

        repaint();
        revalidate();
    }                                       

    private void btnLibraryActionPerformed(java.awt.event.ActionEvent evt) {                                           
       
        PagesController.libraryPage.setMyBookService(myBookService);
     
     
        pnlPage.removeAll();
        
        pnlPage.add(PagesController.libraryPage);
        
       
        resetAllMenu();
        btnLibrary.setForeground(new Color(0, 0, 0));
        btnLibrary.setIcon(new javax.swing.ImageIcon(getClass().getResource("/assets/library_on.png")));
        myBookService.showMyBooks(null, null);
        repaint();
        revalidate();
        
        
    }                                          

